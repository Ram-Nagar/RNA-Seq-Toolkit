#!/bin/bash

#SBATCH --ntasks=1
#SBATCH --cpus-per-task=5
#SBATCH --mem=50G

STAR --limitBAMsortRAM 20000000000 --genomeLoad LoadAndKeep --quantMode GeneCounts --outSAMtype BAM SortedByCoordinate \
    --outFileNamePrefix PE_ --runMode alignReads --genomeDir ../../index --runThreadN 5 --readFilesIn ../read_1 ../read_2
STAR --limitBAMsortRAM 20000000000 --genomeLoad LoadAndRemove --quantMode GeneCounts --outSAMtype BAM SortedByCoordinate \
    --outFileNamePrefix SE_ --runMode alignReads --genomeDir ../../index --runThreadN 5 --readFilesIn ../read_1.1,../read_2.1 
